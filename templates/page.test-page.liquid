<section class="custom-page-section">
  <div class="simple-banner-section">
    <!-- Background image for large devices -->
    <div class="banner-image" style="background-image: url('{{ 'banner-imageBG.png' | asset_url }}');">
      <div class="text-overlay">
        <h2 class="hero-title">The Gift Guide</h2>
        <h2 class="hero-para">Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</h2>
      </div>
    </div>

    <!-- Section for small devices -->
    <div class="small-device-sec">
      <h2 class="small-device-title">The Gift Guide</h2>
      <h2 class="small-device-subtitle">Discover Joy: Your Ultimate Holiday Gift Destination.</h2>
      <img src="{{ 'MobleBanner.png' | asset_url }}" alt="Gift Guide" class="small-device-image" />
    </div>
  </div>

  <style>
    .simple-banner-section {
      position: relative;
      height: 500px;
      margin-left: auto;
      margin-right: auto;
    }

    .banner-image {
      background-size: cover;
      background-position: center;
      height: 100%;
      position: relative;
    }

    .text-overlay {
      position: absolute;
      bottom: 1px;
      margin-left: 3rem;
      color: white;
      padding: 10px;
      width: 39%;
      text-align: left; /* Keep text left-aligned for large devices */
    }

    .hero-title {
      font-family: Jost;
      font-size: 60px;
      font-weight: 500;
      line-height: 30px;
      text-align: left;
    }

    .hero-para {
      font-family: Jost;
      font-size: 20px;
      font-weight: 400;
      line-height: 28px;
      text-align: left;
    }

    .small-device-sec {
      display: none; /* Hide small device section by default */
      position: absolute; /* Position it absolutely within the parent */
      top: 0; /* Align it to the top of the parent */
      left: 0; /* Align it to the left of the parent */
      width: 100%; /* Make it full width */
      z-index: 10; /* Bring it above other elements */
      text-align: center; /* Center text */
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      .banner-image {
        display: none; /* Hide the background image */
      }

      .small-device-sec {
        display: block; /* Show the small device section */
      }

      .small-device-image {
        width: 100%; /* Make the new image full width */
        height: auto; /* Maintain aspect ratio */
      }

      /* Add titles on small devices */
      .small-device-title {
         color:black;
        position: relative; /* Change to relative */
        font-family: Jost;
        font-size: 30px;
        color: white;
        margin-top: 20px; /* Add margin to push down */
      }

      .small-device-subtitle {
         color:black;
        position: relative; /* Change to relative */
        font-family: Jost;
        font-size: 18px;
        color: white;
        margin-top: 10px; /* Add margin to push down */
      }
    }
  </style>
</section>
