<section class="custom-page-section">
  <div class="simple-banner-section">
    <!-- Background image for large devices -->
    <div class="banner-image" style="background-image: url('{{ 'banner-imageBG.png' | asset_url }}');">
      <div class="text-overlay">
        <h2 class="hero-title">The Gift Guide</h2>
        <h2 class="hero-para">Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</h2>
      </div>
    </div>

    <!-- Image for small devices -->
    <img src="{{ 'your-image.png' | asset_url }}" alt="Gift Guide" class="small-device-image" />

  </div>

  <style>
    .simple-banner-section {
      position: relative;
      height: 500px;
      margin-left: auto;
      margin-right: auto;
    }

    .banner-image {
      background-size: cover;
      background-position: center;
      height: 100%;
      position: relative;
    }

    .text-overlay {
      position: absolute;
      bottom: 1px;
      margin-left: 3rem;
      color: white;
      padding: 10px;
      width: 39%;
      text-align: left; /* Keep text left-aligned for large devices */
    }

    .hero-title {
      font-family: Jost;
      font-size: 60px;
      font-weight: 500;
      line-height: 30px;
      text-align: left;
    }

    .hero-para {
      font-family: Jost;
      font-size: 20px;
      font-weight: 400;
      line-height: 28px;
      text-align: left;
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      .banner-image {
        display: none; /* Hide the background image */
      }

      .small-device-image {
        display: block; /* Show the new image */
        width: 100%; /* Make the new image full width */
        height: auto; /* Maintain aspect ratio */
      }

      /* Add titles on small devices */
      .small-device-title {
        position: absolute; /* Position the title */
        top: 20px; /* Adjust top position */
        left: 50%; /* Center horizontally */
        transform: translateX(-50%); /* Center the title */
        font-family: Jost;
        font-size: 30px; /* Adjust font size */
        color: white; /* Change text color to white */
        text-align: center; /* Center align text */
      }

      .small-device-subtitle {
        position: absolute; /* Position the subtitle */
        top: 70px; /* Adjust top position */
        left: 50%; /* Center horizontally */
        transform: translateX(-50%); /* Center the subtitle */
        font-family: Jost;
        font-size: 18px; /* Adjust font size */
        color: white; /* Change text color to white */
        text-align: center; /* Center align text */
      }
    }
  </style>
</section>

<!-- Add the titles only visible on small devices -->
<div class="small-device-title">The Gift Guide</div>
<div class="small-device-subtitle">Discover Joy: Your Ultimate Holiday Gift Destination.</div>
