{% layout 'theme' %}

<section class="custom-page-section">
<div class="simple-banner-section">
  <div class="banner-image" style="background-image: url('{{ 'banner-imageBG.png' | asset_url }}');">
    <div class="text-overlay">
      <h2 class="hero-title">The Gift Guide</h2>
      <h2 class="hero-para">Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</h2>
    </div>
  </div>
</div>

<style>
    .simple-banner-section {
      position: relative;
      height: 500px;
      margin-left: auto;
      margin-right: auto;
    }
    .banner-image {
      background-size: cover;
      background-position: center;
      height: 100%;
      position: relative;
    }
    .text-overlay {
      position: absolute;
      bottom: 1px;
      margin-left: 3rem;
      color: white;
      padding: 10px;
      width:39%;
    }
    .hero-title {
      font-family: Jost;
      font-size: 60px;
      font-weight: 500;
      line-height: 30px;
      text-align: left;
    }
    .hero-para {
      font-family: Jost;
      font-size: 20px;
      font-weight: 400;
      line-height: 28px;
      text-align: left;
    }

    /* Responsive font sizes */
    @media (max-width: 1200px) {
      .hero-title {
        font-size: 50px; 
      }
      .hero-para {
        font-size: 18px; 
      }
    }
    @media (max-width: 992px) { 
      .hero-title {
        font-size: 40px; 
      }
      .hero-para {
        font-size: 16px; 
      }
    }
    @media (max-width: 768px) {
      .hero-title {
        font-size: 30px; 
      }
      .hero-para {
        font-size: 14px; 
      }
    }
  </style>
</section>
