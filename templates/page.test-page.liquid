<section class="custom-page-section">
  <div class="simple-banner-section">
    <!-- Background image for large devices -->
    <div class="banner-image" style="background-image: url('{{ 'banner-imageBG.png' | asset_url }}');">
      <div class="text-overlay">
        <span class="hero-title">The Gift Guide</span>
        <span class="hero-para">Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</span>
        
        <!-- Button with arrow -->
        <a href="#" class="cta-button">
          Shop Now 
          <span class="arrow">â†’</span>
        </a>
      </div>
    </div>

    <!-- Section for small devices -->
    <div class="small-device-sec">
      <h2 class="small-device-title">The Gift Guide</h2>
      <h2 class="small-device-subtitle">Discover Joy: Your Ultimate Holiday Gift Destination.</h2>
      <img src="{{ 'MobleBanner.png' | asset_url }}" alt="Gift Guide" class="small-device-image" />
    </div>
  </div>

  <style>
    .simple-banner-section {
      position: relative;
      height: 100%;
      max-width: 1200px;
      margin-left: auto;
      margin-right: auto;
      margin-top: auto;
      margin-bottom: 5%;
      color: black;
    }

    .banner-image {
      background-size: cover;
      background-position: center;
      width: 100%;
      height: 100vh;
      position: relative;
    }

    .text-overlay {
      position: absolute;
      bottom: 8rem;
      padding-left: 3rem;
      color: black;
      width: 45%;
      text-align: left;
    }

    .hero-title {
      font-family: Jost;
      font-size: 70px;
      font-weight: 500;
      text-align: left;
      color: black;
    }

    .hero-para {
      font-family: Jost;
      font-size: 20px;
      font-weight: 400;
      text-align: left;
      color: black;
    }

    .small-device-sec {
      display: none;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 10;
      text-align: center;
    }

    /* Button styles */
    .cta-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: black;
      color: white;
      text-decoration: none;
      border: 2px solid black;
      border-radius: 5px;
      position: relative;
      overflow: hidden;
      margin-top: 15px;
      z-index: 1; /* Ensures text stays above */
      transition: color 0.4s ease; /* Text color transition */
    }

    .cta-button .arrow {
      margin-left: 10px;
      transition: color 0.4s ease;
    }

    /* Background animation on hover */
    .cta-button::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%; /* Start outside the button */
      width: 100%;
      height: 100%;
      background-color: yellow; /* Hover background color */
      z-index: 0;
      transition: left 0.5s ease; /* Smooth background movement */
    }

    /* On hover, the background moves across the button */
    .cta-button:hover::before {
      left: 0;
    }

    /* On hover, text color changes */
    .cta-button:hover {
      color: black; /* Text color changes on hover */
    }

    .cta-button:hover .arrow {
      color: black; /* Arrow color changes on hover */
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      .banner-image {
        display: none;
      }

      .small-device-sec {
        display: block;
      }

      .small-device-image {
        width: 100%;
        height: auto;
      }

      .small-device-title {
        font-family: Jost;
        font-size: 30px;
        color: black;
        margin-top: 20px;
        padding: 5px;
      }

      .small-device-subtitle {
        font-family: Jost;
        font-size: 18px;
        color: black;
        margin-top: 5px;
        padding: 10px;
      }
    }
  </style>
</section>
