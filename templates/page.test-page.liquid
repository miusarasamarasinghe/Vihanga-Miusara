<section class="custom-page-section">
  <div class="simple-banner-section">
    <!-- Background image for large devices -->
    <div class="banner-image" style="background-image: url('{{ 'banner-imageBG.png' | asset_url }}');">
      <div class="text-overlay">
        <h2 class="hero-title">The Gift Guide</h2>
        <h2 class="hero-para">Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</h2>
      </div>
    </div>

    <!-- Section for small devices -->
    <div class="small-device-sec">
      <h2 class="small-device-title">The Gift Guide</h2>
      <h2 class="small-device-subtitle">Discover Joy: Your Ultimate Holiday Gift Destination.</h2>
      <img src="{{ 'MobleBanner.png' | asset_url }}" alt="Gift Guide" class="small-device-image" />
    </div>
  </div>

  <style>
    .simple-banner-section {
      position: relative;
      height: 500px;
       max-width: 1200px;
      margin-left: auto;  
      margin-right: auto; 
      padding-left: 10%; 
      padding-right: 10%; 
    }

    .banner-image {
      background-size: cover;
      background-position: center;
       max-width: 1200px;
      height: 100%;
      position: relative;
    }

    .text-overlay {
      position: absolute;
      bottom: 1px;
      margin-left: 3rem;
      color: white;
      padding: 10px;
      width: 39%;
      text-align: left; 
    }

    .hero-title {
      font-family: Jost;
      font-size: 60px;
      font-weight: 500;
      line-height: 30px;
      text-align: left;
    }

    .hero-para {
      font-family: Jost;
      font-size: 20px;
      font-weight: 400;
      line-height: 28px;
      text-align: left;
    }

    .small-device-sec {
      display: none; 
      position: absolute; 
      top: 0; 
      left: 0; 
      width: 100%; 
      z-index: 10; 
      text-align: center; 
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      .banner-image {
        display: none; 
      }

      .small-device-sec {
        display: block; 
      }

      .small-device-image {
        width: 100%; 
        height: auto; 
      }

      /* Add titles on small devices */
      .small-device-title {
        font-family: Jost;
        font-size: 30px;
        color: black;
        margin-top: 20px; 
        padding: 5px; 
      }

      .small-device-subtitle {
        font-family: Jost;
        font-size: 18px;
        color: black;
        margin-top: 5px; 
        padding: 10px; 
      }
    }
  </style>
</section>
