<section class="custom-page-section">
  <div class="simple-banner-section">
    <!-- Background image for large devices -->
    <div class="banner-image" style="background-image: url('{{ 'banner-imageBG.png' | asset_url }}');">
      <div class="text-overlay">
        <h2 class="hero-title">The Gift Guide</h2>
        <h2 class="hero-para">Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</h2>
        
        <!-- Button with arrow -->
        <a href="#" class="cta-button">
          Shop Now 
          <span class="arrow">â†’</span>
        </a>
      </div>
    </div>

    <!-- Section for small devices -->
    <div class="small-device-sec">
      <h2 class="small-device-title">The Gift Guide</h2>
      <h2 class="small-device-subtitle">Discover Joy: Your Ultimate Holiday Gift Destination.</h2>
      <img src="{{ 'MobleBanner.png' | asset_url }}" alt="Gift Guide" class="small-device-image" />
    </div>
  </div>

  <style>
    .simple-banner-section {
      position: relative;
      height:100%;
      max-width: 1200px;
      margin-left: auto;  
      margin-right: auto; 
      margin-top: auto;
      margin-bottom:20px;
    }

    .banner-image {
      background-size: cover;
      background-position: center;
   width:100%;
      height: 100vh;
      position: relative;
    }

    .text-overlay {
      position: absolute;
   bottom:0;
 padding-left:3rem;
      color: white;
   
      width: 42%;
      text-align: left; 
    }

    .hero-title {
      font-family: Jost;
      font-size: 70px;
      font-weight: 500;
      text-align: left;
    }

    .hero-para {
      font-family: Jost;
      font-size: 20px;
      font-weight: 400;
      text-align: left;
    }

    .small-device-sec {
      display: none; 
      position: absolute; 
      top: 0; 
      left: 0; 
      width: 100%; 
      z-index: 10; 
      text-align: center; 
    }

    /* Button styles */
    .cta-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: white; /* Initial background color */
      color: black; /* Initial text color */
      text-decoration: none;
      border: 2px solid black; /* Border color */
      border-radius: 5px;
      position: relative;
      transition: background-color 0.3s, color 0.3s; /* Transition for smooth effect */
      margin-top: 15px; /* Space above the button */
    }

    .cta-button .arrow {
      margin-left: 10px; /* Space between text and arrow */
      transition: color 0.3s; /* Smooth transition for arrow color */
    }

    .cta-button:hover {
      background-color: black; /* Background color on hover */
      color: white; /* Text color on hover */
    }

    .cta-button:hover .arrow {
      color: white; /* Arrow color on hover */
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      .banner-image {
        display: none; 
      }

      .small-device-sec {
        display: block; 
      }

      .small-device-image {
        width: 100%; 
        height: auto; 
      }

      /* Add titles on small devices */
      .small-device-title {
        font-family: Jost;
        font-size: 30px;
        color: black;
        margin-top: 20px; 
        padding: 5px; 
      }

      .small-device-subtitle {
        font-family: Jost;
        font-size: 18px;
        color: black;
        margin-top: 5px; 
        padding: 10px; 
      }
    }
  </style>
</section>
