<section class="custom-page-section">
  <div class="simple-banner-section">
    <!-- Background image for large devices -->
    <div class="banner-image" style="background-image: url('{{ 'banner-imageBG.png' | asset_url }}');">
      <div class="text-overlay">
        <span class="hero-title">The Gift Guide</span>
        <span class="hero-para">Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</span>
        
        <!-- Button with arrow -->
        <a href="#" class="cta-button">
          Shop Now 
          <span class="arrow">â†’</span>
        </a>
      </div>
    </div>

    <!-- Section for small devices -->
    <div class="small-device-sec">
      <h2 class="small-device-title">The Gift Guide</h2>
      <h2 class="small-device-subtitle">Discover Joy: Your Ultimate Holiday Gift Destination.</h2>
      <img src="{{ 'MobleBanner.png' | asset_url }}" alt="Gift Guide" class="small-device-image" />
    </div>
  </div>

  <style>
    .simple-banner-section {
      position: relative;
      height:100%;
      max-width: 1200px;
      margin-left: auto;  
      margin-right: auto; 
      margin-top: auto;
      margin-bottom:5%;
      color: black;
    }

    .banner-image {
      background-size: cover;
      background-position: center;
      width: 100%;
      height: 100vh;
      position: relative;
    }

    .text-overlay {
      position: absolute;
      bottom: 8rem;
      padding-left: 3rem;
      color: black;
      width: 45%;
      text-align: left; 
    }

    .hero-title {
      font-family: Jost;
      font-size: 70px;
      font-weight: 500;
      text-align: left;
      color: black;
    }

    .hero-para {
      font-family: Jost;
      font-size: 20px;
      font-weight: 400;
      text-align: left;
      color: black;
    }

    .small-device-sec {
      display: none; 
      position: absolute; 
      top: 0; 
      left: 0; 
      width: 100%; 
      z-index: 10; 
      text-align: center; 
    }

    /* Button styles */
    .cta-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: black; 
      color: white;
      text-decoration: none;
     
      border-radius: 5px;
      position: relative;
      overflow: hidden; 
      transition: color 0.3s ease; 
      margin-top: 15px; 
    }

    .cta-button .arrow {
      margin-left: 10px; /* Space between text and arrow */
      transition: color 0.3s ease; /* Smooth transition for arrow color */
    }

    /* Create the background animation */
    .cta-button::before {
      content: "";
      position: absolute;
      color:black;
      top: 0;
      left: -100%; /* Start the animation off the left side */
      width: 100%;
      height: 100%;
      background-color: yellow; /* End color */
      z-index: 0;
      transition: transform 1s ease; /* Control the speed and easing */
    }

    .cta-button:hover::before {
      transform: translateX(100%); /* Move the yellow background across the button */
    }

    .cta-button:hover {
      color: black; /* Change the text color on hover */
    }

    .cta-button:hover .arrow {
      color: black; /* Arrow color changes on hover */
    }


    /* Ensure the text is above the animation */
    .cta-button span, .cta-button .arrow {
      position: relative;
      z-index: 1;
    }

    /* Responsive styles */
    @media (max-width: 768px) {
      .banner-image {
        display: none; 
      }

      .small-device-sec {
        display: block; 
      }

      .small-device-image {
        width: 100%; 
        height: auto; 
      }

      /* Add titles on small devices */
      .small-device-title {
        font-family: Jost;
        font-size: 30px;
        color: black;
        margin-top: 20px; 
        padding: 5px; 
      }

      .small-device-subtitle {
        font-family: Jost;
        font-size: 18px;
        color: black;
        margin-top: 5px; 
        padding: 10px; 
      }
    }
  </style>
</section>
