      price: 39.99,
      description:
        'This one-piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.',
      image: '{{ "redja.webp" | asset_url }}',
      colors: ['Red', 'Yellow'],
     
    },
    {
      id: 4,
      name: 'Green Trench Coat',
      price: 49.99,
      description:
        'This one-piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.',
      image: '{{ "coffee.webp" | asset_url }}',
      colors: ['White', 'Black'],
     
    },
    {
      id: 5,
      name: 'Tennis Blue T-Shirt',
      price: 59.99,
      description:
        'This one-piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.',
      image: '{{ "redpoket.webp" | asset_url }}',
      colors: ['Grey', 'Black'],
     
    },
    {
      id: 6,
      name: 'Long Sleeve Tennis Top',
      price: 69.99,
      description:
        'This one-piece swimsuit is crafted from jersey featuring an allover micro Monogram motif in relief.',
      image: '{{ "denim.webp" | asset_url }}',
      colors: ['Blue', 'Black'],
     
    },
  ];
  let selectedColor = '';
  let selectedSize = '';
  let selectedProductId; 

  function toggleMenu() {
    const overlay = document.getElementById('overlayMenu');
    const burgerIcon = document.querySelector('.burger-icon');

    if (overlay.style.display === 'block') {
      overlay.style.display = 'none';
      burgerIcon.innerHTML = '&#9776;'; 
    } else {
      overlay.style.display = 'block';
      burgerIcon.innerHTML = 'X'; 
    }
  }

  function renderProductGrid() {
    const gridContainer = document.querySelector('.product-grid');
    gridContainer.innerHTML = '';

    products.forEach((product) => {
      const productBlock = document.createElement('div');
      productBlock.className = 'product-block';
      productBlock.setAttribute('data-product-id', product.id);
      productBlock.innerHTML = `
        <img src="${product.image}" alt="${product.name}" class="Card-img">
        <button class="view-details" onclick="showProductPopup(${product.id})">+</button>
      `;
      gridContainer.appendChild(productBlock);
    });
  }

  function showProductPopup(productId) {
    const product = products.find((p) => p.id === productId);
    if (!product) {
      console.error('Product not found for ID:', productId);
      return;
    }
    selectedProductId = productId;
    const popup = document.querySelector('.product-popup');
    if (!popup) {
      console.error('Popup element not found');
      return;
    }

    const productImage = popup.querySelector('.product-image');
    const productName = popup.querySelector('.product-name');
    const productPrice = popup.querySelector('.product-price');
    const productDescription = popup.querySelector('.product-description');
    const productColors = popup.querySelector('.product-colors');


    // Update popup content with selected product details
    productImage.src = product.image;
    productName.textContent = product.name;
    productPrice.textContent = `$${product.price.toFixed(2)}`;
    productDescription.textContent = product.description;

   
    renderColorSwatches(product.colors);

    
    console.log('Popup content set for product:', product.name);
    popup.style.display = 'flex';
  }

  function renderColorSwatches(colors) {
    const productColors = document.querySelector('.product-colors');
    productColors.innerHTML = ''; 

    colors.forEach((color) => {
      const colorOption = document.createElement('div');
      colorOption.className = 'color-option';
      colorOption.style.border = '1px solid black';
      colorOption.style.borderLeft = `7px solid ${color}`;
      colorOption.style.padding = '5px';
      colorOption.style.margin = '5px 0';
      colorOption.style.width = '130px';
      colorOption.textContent = color;

      // Add click event to handle selection
      colorOption.addEventListener('click', () => {
      
        const allOptions = document.querySelectorAll('.color-option');
        allOptions.forEach((option) => option.classList.remove('selected'));

      
        colorOption.classList.add('selected');

    
        const selectedColor = colorOption.textContent;
        console.log('Selected Color:', selectedColor); 
      });

      productColors.appendChild(colorOption);
    });
  }

  function closePopup() {
    const popup = document.querySelector('.product-popup');
    if (popup) {
      popup.style.display = 'none';
    }
  }

  // Event listener to close popup on background click or close button
  document.querySelector('.product-popup').addEventListener('click', (e) => {
    console.log('Click event detected on popup:', e.target);
    if (e.target.classList.contains('product-popup') || e.target.classList.contains('close-popup')) {
      closePopup();
    }
  });

  // Render the product grid on DOMContentLoaded
  document.addEventListener('DOMContentLoaded', () => {
    console.log('Document loaded, rendering product grid.');
    renderProductGrid();
  });

// Function to toggle the dropdown menu
function toggleDropdown() {
const dropdownMenu = document.getElementById("dropdown-menu");
const dropdownArrow = document.getElementById("dropdown-arrow");

if (dropdownMenu.style.display === "block") {
  dropdownMenu.style.display = "none";
  dropdownArrow.style.transform = "rotate(0deg)"; 
} else {
  dropdownMenu.style.display = "block";
  dropdownArrow.style.transform = "rotate(180deg)"; 
}
}

// Function to handle option selection
function selectOption(option) {
document.getElementById("selected-option").innerText = option;
toggleDropdown(); 
}
function selectColor(color) {
    selectedColor = color; 
  
  }
// Close the dropdown if clicked outside
window.onclick = function(event) {
if (!event.target.matches('.dropdown-header') && !event.target.closest(".custom-dropdown")) {
  const dropdowns = document.getElementsByClassName("dropdown-menu");
  const dropdownArrow = document.getElementById("dropdown-arrow");
  for (let i = 0; i < dropdowns.length; i++) {
    const openDropdown = dropdowns[i];
    if (openDropdown.style.display === "block") {
      openDropdown.style.display = "none";
      dropdownArrow.style.transform = "rotate(0deg)";
    }
  }
}
};
//add to cart
function addToCart(event, productId) {
event.preventDefault(); 

const product = products.find((p) => p.id === productId);
if (!product) {
  console.error('Product not found for ID:', productId);
  return;
}

const selectedSize = document.getElementById("selected-option").innerText;
const selectedColorElement = document.querySelector('.color-option.selected');
const selectedColor = selectedColorElement ? selectedColorElement.textContent : null;

if (!selectedSize || !selectedColor) {
  alert("Please select both size and color before adding to cart.");
  return;
}


console.log(`Added to cart: ${product.name}, Size: ${selectedSize}, Color: ${selectedColor}, Price: $${product.price.toFixed(2)}`);
if (selectedSize === "Medium" && selectedColor === "Black") {
  const softWinterJacket = products.find(p => p.name === "Soft Winter Jacket");
  if (softWinterJacket) {
    console.log(`Also added to cart: ${softWinterJacket.name}, Size: Medium, Color: Black, Price: $${softWinterJacket.price.toFixed(2)}`);
    
    // Show alert with added products
    alert(`Added to cart:\n- ${product.name}, Size: ${selectedSize}, Color: ${selectedColor}, Price: $${product.price.toFixed(2)}\n- ${softWinterJacket.name}, Size: Medium, Color: Black, Price: $${softWinterJacket.price.toFixed(2)}`);
  } else {
    console.error('Soft Winter Jacket not found');
  }
} else {
  // Show alert for only the main product
  alert(`Added to cart:\n- ${product.name}, Size: ${selectedSize}, Color: ${selectedColor}, Price: $${product.price.toFixed(2)}`);
}

}


</script>


